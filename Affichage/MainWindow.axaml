<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="using:Affichage.Models"
        x:Class="Affichage.MainWindow"
        Title="CrÃ©ation de Personnage" Width="480" Height="750"
        CanResize="False" Background="#1E1E1E" WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, *, Auto" Margin="20">
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="MES HÃ‰ROS" FontSize="24" FontWeight="Black" Foreground="#A0153E" HorizontalAlignment="Center"/>
            <Separator Background="#800020" Height="2" Margin="50,5"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#2D2D2D" CornerRadius="8" Padding="10">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Name="EmptyMessageTxt" Text="Aucun hÃ©ros crÃ©Ã©" HorizontalAlignment="Center" Foreground="#777" Margin="0,50,0,0"/>
                    
                    <ItemsControl Name="CharactersList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:Personnage">
                                <Border Background="#383838" Margin="0,5" Padding="10" CornerRadius="5">
                                    <Grid ColumnDefinitions="40, *, Auto">
                                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" Background="#800020">
                                            <TextBlock Text="{Binding Nom[0]}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock Text="{Binding Nom}" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="{Binding RaceChoisie.Nom}" FontSize="11" Foreground="#AAA"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatForce}" Foreground="#FF4D4D" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding StatDexterite}" Foreground="#4DFF4D" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding StatIntelligence}" Foreground="#4D4DFF" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <Button Name="BtnOuvrirFormulaire" Content="NOUVEAU HÃ‰ROS" Click="OnOuvrirFormulaireClick" 
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#800020" Foreground="White" Height="40"/>

            <Border Name="FormPanel" IsVisible="False" Background="#333" CornerRadius="8" Padding="15" BorderBrush="#555" BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBox Name="InputNom" Watermark="Nom..."/>
                    <Grid ColumnDefinitions="*, 10, *">
                        <ComboBox Grid.Column="0" Name="ComboRace" HorizontalAlignment="Stretch" SelectionChanged="OnRaceSelectionChanged" PlaceholderText="Race"/>
                        <ComboBox Grid.Column="2" Name="ComboClasse" HorizontalAlignment="Stretch" IsEnabled="False" PlaceholderText="Classe"/>
                    </Grid>

                    <Border Background="#222" Padding="10" CornerRadius="5">
                        <StackPanel Spacing="10">
                            <DockPanel LastChildFill="False">
                                <Button DockPanel.Dock="Left" Content="ðŸŽ² LANCER DÃ‰" Click="OnLancerDeClick" Background="#444" FontSize="11"/>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="POINTS : " Foreground="#777" FontSize="11" VerticalAlignment="Center"/>
                                    <TextBlock Name="TxtPointsRestants" Text="0" Foreground="#4DFF4D" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DockPanel>

                            <Grid ColumnDefinitions="*, *, *">
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Spacing="5">
                                    <TextBlock Text="FOR" Foreground="#FF4D4D" FontSize="10" HorizontalAlignment="Center"/>
                                    <TextBlock Name="TxtFor" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="18"/>
                                    <StackPanel Orientation="Horizontal" Spacing="2">
                                        <Button Content="-" Click="OnRemoveForce" Width="30" HorizontalContentAlignment="Center"/>
                                        <Button Content="+" Click="OnAddForce" Width="30" HorizontalContentAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Spacing="5">
                                    <TextBlock Text="DEX" Foreground="#4DFF4D" FontSize="10" HorizontalAlignment="Center"/>
                                    <TextBlock Name="TxtDex" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="18"/>
                                    <StackPanel Orientation="Horizontal" Spacing="2">
                                        <Button Content="-" Click="OnRemoveDex" Width="30" HorizontalContentAlignment="Center"/>
                                        <Button Content="+" Click="OnAddDex" Width="30" HorizontalContentAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center" Spacing="5">
                                    <TextBlock Text="INT" Foreground="#4D4DFF" FontSize="10" HorizontalAlignment="Center"/>
                                    <TextBlock Name="TxtInt" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="18"/>
                                    <StackPanel Orientation="Horizontal" Spacing="2">
                                        <Button Content="-" Click="OnRemoveInt" Width="30" HorizontalContentAlignment="Center"/>
                                        <Button Content="+" Click="OnAddInt" Width="30" HorizontalContentAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Grid ColumnDefinitions="*, 10, *">
                        <Button Grid.Column="0" Content="ANNULER" Click="OnAnnulerClick" Background="Transparent" Foreground="#777" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        <Button Grid.Column="2" Name="BtnValider" Content="VALIDER" Click="OnValiderCreationClick" Background="#800020" Foreground="White" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>